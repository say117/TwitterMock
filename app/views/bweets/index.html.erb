<div id='wrap'>
  <div id='header'>
    <% if flash[:notice] %>
      <p class='notice'><%= flash[:notice] %></p>
    <% end %>
  </div><!-- /header -->

  <div id='innner'>
    <div id='sideWrap'>
      <% if session[:user_id].nil? %>
        <%= render 'sessions/form' %>
        <%= link_to 'Sign up', new_user_path %>
      <% else %>
        <h4>UserName<br><%= @user.name %></h4>
        <%= image_tag("/icons/#{@user.name}.jpg", alt: :icon, size: "64x64") %><br>
        <%= link_to 'Sign out', sessions_destroy_path %>
        <%= render 'bweets/form' %>
      <% end %>
    </div><!-- /sideWrap -->
    <div id='mainWrap'>
      <h1>Bweets</h1>
      <div id='bweets'>
        <%= render partial: "bweets", collections: @bweets %>
      </div>
      <button type="submit" id="more_show">More Show 10 Bweets</button>
    </div><!-- /mainWrap -->
  </div><!-- inner -->
  <div class="clear"></div>
</div><!-- /wrap -->